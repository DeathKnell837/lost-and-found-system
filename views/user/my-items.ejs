<%- contentFor('body') %>

<div class="container py-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/user/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">My Items</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="fas fa-list me-2"></i>My Reported Items</h2>
                <div>
                    <a href="/report/lost" class="btn btn-danger me-2">
                        <i class="fas fa-plus me-1"></i>Report Lost
                    </a>
                    <a href="/report/found" class="btn btn-success">
                        <i class="fas fa-plus me-1"></i>Report Found
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All Status</option>
                        <option value="pending" <%= query.status === 'pending' ? 'selected' : '' %>>Pending</option>
                        <option value="approved" <%= query.status === 'approved' ? 'selected' : '' %>>Approved</option>
                        <option value="rejected" <%= query.status === 'rejected' ? 'selected' : '' %>>Rejected</option>
                        <option value="claimed" <%= query.status === 'claimed' ? 'selected' : '' %>>Claimed</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Type</label>
                    <select name="type" class="form-select">
                        <option value="">All Types</option>
                        <option value="lost" <%= query.type === 'lost' ? 'selected' : '' %>>Lost</option>
                        <option value="found" <%= query.type === 'found' ? 'selected' : '' %>>Found</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i>Filter
                    </button>
                    <a href="/user/my-items" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Items Grid -->
    <% if (items.length === 0) { %>
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">No items found</h4>
            <p class="text-muted">You haven't reported any items yet, or no items match your filter.</p>
            <a href="/report/lost" class="btn btn-danger me-2">Report Lost Item</a>
            <a href="/report/found" class="btn btn-success">Report Found Item</a>
        </div>
    <% } else { %>
        <div class="row">
            <% items.forEach(item => { %>
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <% if (item.imagePath) { %>
                        <img src="<%= item.imagePath %>" class="card-img-top" alt="<%= item.itemName %>" style="height: 180px; object-fit: cover;">
                    <% } else { %>
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    <% } %>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="badge <%= item.type === 'lost' ? 'bg-danger' : 'bg-success' %>">
                                <%= item.type.toUpperCase() %>
                            </span>
                            <% if (item.status === 'pending') { %>
                                <span class="badge bg-warning text-dark">Pending</span>
                            <% } else if (item.status === 'approved') { %>
                                <span class="badge bg-success">Approved</span>
                            <% } else if (item.status === 'rejected') { %>
                                <span class="badge bg-danger">Rejected</span>
                            <% } else if (item.status === 'claimed') { %>
                                <span class="badge bg-info">Claimed</span>
                            <% } %>
                        </div>
                        <h5 class="card-title"><%= item.itemName %></h5>
                        <p class="card-text text-muted small">
                            <i class="fas fa-map-marker-alt me-1"></i><%= item.location %>
                        </p>
                        <p class="card-text text-muted small">
                            <i class="fas fa-calendar me-1"></i><%= new Date(item.dateReported).toLocaleDateString() %>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a href="/items/<%= item._id %>" class="btn btn-outline-primary btn-sm w-100">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>&status=<%= query.status || '' %>&type=<%= query.type || '' %>">Previous</a>
                </li>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&status=<%= query.status || '' %>&type=<%= query.type || '' %>"><%= i %></a>
                    </li>
                <% } %>
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>&status=<%= query.status || '' %>&type=<%= query.type || '' %>">Next</a>
                </li>
            </ul>
        </nav>
        <% } %>
    <% } %>
</div>
