<%- contentFor('body') %>

<div class="container py-5">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="fas fa-tachometer-alt me-2"></i>My Dashboard</h2>
                    <p class="text-muted mb-0">Welcome back, <strong><%= user.username %></strong>!</p>
                </div>
                <div>
                    <a href="/report/lost" class="btn btn-danger me-2">
                        <i class="fas fa-exclamation-triangle me-1"></i>Report Lost
                    </a>
                    <a href="/report/found" class="btn btn-success">
                        <i class="fas fa-hand-holding-heart me-1"></i>Report Found
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-5 text-primary fw-bold"><%= stats.totalReported %></div>
                    <small class="text-muted">Total Reported</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-5 text-warning fw-bold"><%= stats.pending %></div>
                    <small class="text-muted">Pending Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-5 text-success fw-bold"><%= stats.approved %></div>
                    <small class="text-muted">Approved</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-5 text-info fw-bold"><%= stats.claimed %></div>
                    <small class="text-muted">Claimed</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
                            <i class="fas fa-search fa-2x text-danger"></i>
                        </div>
                        <div>
                            <h3 class="mb-0"><%= stats.lostItems %></h3>
                            <p class="text-muted mb-0">Lost Items Reported</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                            <i class="fas fa-hand-holding-heart fa-2x text-success"></i>
                        </div>
                        <div>
                            <h3 class="mb-0"><%= stats.foundItems %></h3>
                            <p class="text-muted mb-0">Found Items Reported</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Items -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>My Recent Reports</h5>
                    <a href="/user/my-items" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <% if (myItems.length === 0) { %>
                        <div class="text-center py-5">
                            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                            <p class="text-muted mb-3">You haven't reported any items yet.</p>
                            <a href="/report/lost" class="btn btn-danger me-2">Report Lost Item</a>
                            <a href="/report/found" class="btn btn-success">Report Found Item</a>
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Item</th>
                                        <th>Type</th>
                                        <th>Location</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% myItems.forEach(item => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <% if (item.imagePath) { %>
                                                    <img src="<%= item.imagePath %>" alt="<%= item.itemName %>" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <i class="fas fa-box text-muted"></i>
                                                    </div>
                                                <% } %>
                                                <strong><%= item.itemName %></strong>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge <%= item.type === 'lost' ? 'bg-danger' : 'bg-success' %>">
                                                <%= item.type.toUpperCase() %>
                                            </span>
                                        </td>
                                        <td><%= item.location %></td>
                                        <td><%= new Date(item.dateReported).toLocaleDateString() %></td>
                                        <td>
                                            <% if (item.status === 'pending') { %>
                                                <span class="badge bg-warning text-dark">Pending</span>
                                            <% } else if (item.status === 'approved') { %>
                                                <span class="badge bg-success">Approved</span>
                                            <% } else if (item.status === 'rejected') { %>
                                                <span class="badge bg-danger">Rejected</span>
                                            <% } else if (item.status === 'claimed') { %>
                                                <span class="badge bg-info">Claimed</span>
                                            <% } %>
                                        </td>
                                        <td class="text-end">
                                            <a href="/items/<%= item._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <a href="/user/my-items" class="card border-0 shadow-sm text-decoration-none h-100">
                <div class="card-body text-center py-4">
                    <i class="fas fa-list fa-2x text-primary mb-3"></i>
                    <h6 class="mb-0">View All My Items</h6>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a href="/search" class="card border-0 shadow-sm text-decoration-none h-100">
                <div class="card-body text-center py-4">
                    <i class="fas fa-search fa-2x text-success mb-3"></i>
                    <h6 class="mb-0">Search Items</h6>
                </div>
            </a>
        </div>
        <div class="col-md-4 mb-3">
            <a href="/user/settings" class="card border-0 shadow-sm text-decoration-none h-100">
                <div class="card-body text-center py-4">
                    <i class="fas fa-cog fa-2x text-secondary mb-3"></i>
                    <h6 class="mb-0">Settings</h6>
                </div>
            </a>
        </div>
    </div>
</div>
