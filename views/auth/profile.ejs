<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-body text-center p-4">
                    <div class="mb-4">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h4><%= profile.username %></h4>
                    <p class="text-muted"><%= profile.email %></p>
                    <span class="badge bg-<%= profile.role === 'admin' ? 'danger' : 'primary' %>">
                        <%= profile.role.charAt(0).toUpperCase() + profile.role.slice(1) %>
                    </span>
                    <hr>
                    <p class="small text-muted mb-0">
                        <i class="fas fa-calendar me-1"></i>
                        Member since <%= new Date(profile.createdAt).toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) %>
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <!-- Update Profile -->
            <div class="card shadow mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i> Update Profile</h5>
                </div>
                <div class="card-body">
                    <form action="/auth/profile" method="POST">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Username</label>
                                <input type="text" class="form-control" name="username" 
                                       value="<%= profile.username %>" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="email" 
                                       value="<%= profile.email %>" required>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i> Update Profile
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Change Password -->
            <div class="card shadow mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-key me-2"></i> Change Password</h5>
                </div>
                <div class="card-body">
                    <form action="/auth/change-password" method="POST">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Current Password</label>
                                <input type="password" class="form-control" name="currentPassword" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">New Password</label>
                                <input type="password" class="form-control" name="newPassword" required minlength="6">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Confirm New Password</label>
                                <input type="password" class="form-control" name="confirmPassword" required minlength="6">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-key me-2"></i> Change Password
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- My Reported Items -->
            <div class="card shadow">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i> My Reported Items</h5>
                </div>
                <div class="card-body">
                    <% if (myItems.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% myItems.forEach(function(item) { %>
                                        <tr>
                                            <td><%= item.itemName %></td>
                                            <td>
                                                <span class="badge bg-<%= item.type === 'lost' ? 'danger' : 'success' %>">
                                                    <%= item.type %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    item.status === 'approved' ? 'success' : 
                                                    item.status === 'pending' ? 'warning' : 
                                                    item.status === 'claimed' ? 'info' : 'secondary' 
                                                %>">
                                                    <%= item.status %>
                                                </span>
                                            </td>
                                            <td><%= new Date(item.dateReported).toLocaleDateString() %></td>
                                            <td>
                                                <a href="/items/<%= item._id %>" class="btn btn-sm btn-outline-primary">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <p class="text-muted text-center mb-0">
                            <i class="fas fa-inbox fa-2x mb-2 d-block"></i>
                            You haven't reported any items yet.
                        </p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
