<div class="container py-5">
    <!-- Page Header -->
    <div class="mb-4">
        <h2 class="mb-1">
            <i class="fas fa-handshake text-primary me-2"></i> Claimed Items
        </h2>
        <p class="text-muted mb-0">Items that have been successfully returned to their owners</p>
    </div>
    
    <!-- Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form action="/items/claimed" method="GET" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Type</label>
                    <select class="form-select" name="type">
                        <option value="">All Types</option>
                        <option value="lost" <%= query.type === 'lost' ? 'selected' : '' %>>Lost Items</option>
                        <option value="found" <%= query.type === 'found' ? 'selected' : '' %>>Found Items</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Items Grid -->
    <% if (items.length > 0) { %>
        <div class="row g-4">
            <% items.forEach(function(item) { %>
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card item-card h-100 shadow-sm">
                        <div class="position-relative">
                            <% if (item.imagePath) { %>
                                <img src="<%= item.imagePath %>" class="card-img-top item-image" alt="<%= item.itemName %>">
                            <% } else { %>
                                <div class="card-img-top item-image-placeholder d-flex align-items-center justify-content-center bg-light">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            <% } %>
                            <div class="claimed-overlay">
                                <span class="badge bg-info">
                                    <i class="fas fa-check-circle me-1"></i> Claimed
                                </span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-<%= item.type === 'lost' ? 'danger' : 'success' %>">
                                    <%= item.type.charAt(0).toUpperCase() + item.type.slice(1) %>
                                </span>
                                <% if (item.category) { %>
                                    <span class="badge bg-secondary">
                                        <%= item.category.name %>
                                    </span>
                                <% } %>
                            </div>
                            <h5 class="card-title"><%= item.itemName %></h5>
                            <p class="card-text text-muted small">
                                <i class="fas fa-map-marker-alt me-1"></i> <%= item.location %>
                            </p>
                        </div>
                        <div class="card-footer bg-white">
                            <small class="text-muted">
                                <i class="fas fa-handshake me-1"></i>
                                Claimed on <%= item.claimedBy && item.claimedBy.date ? 
                                    new Date(item.claimedBy.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : 
                                    'N/A' %>
                            </small>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <%- include('../partials/pagination', { currentPage, totalPages, totalItems, query }) %>
        <% } %>
    <% } else { %>
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">No claimed items yet</h4>
            <p class="text-muted">Items marked as claimed will appear here.</p>
        </div>
    <% } %>
</div>
