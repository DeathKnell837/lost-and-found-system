<div class="dashboard-content">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="fas fa-clock text-warning me-2"></i> Pending Review</h2>
            <p class="text-muted mb-0">Items waiting for your approval</p>
        </div>
        <span class="badge bg-warning fs-6"><%= items.length %> pending</span>
    </div>
    
    <% if (items.length > 0) { %>
        <!-- Quick Actions Bar -->
        <div class="card mb-3">
            <div class="card-body py-2 d-flex align-items-center justify-content-between">
                <small class="text-muted"><i class="fas fa-info-circle me-1"></i> Click Approve or Reject to process items</small>
            </div>
        </div>
        
        <div class="row g-3">
            <% items.forEach(function(item) { %>
                <div class="col-lg-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex">
                                <!-- Image -->
                                <div class="me-3" style="width: 100px; height: 100px; flex-shrink: 0;">
                                    <% if (item.imagePath) { %>
                                        <img src="<%= item.imagePath %>" class="w-100 h-100 object-fit-cover rounded" alt="<%= item.itemName %>">
                                    <% } else { %>
                                        <div class="w-100 h-100 d-flex align-items-center justify-content-center bg-light rounded">
                                            <i class="fas fa-image fa-2x text-muted"></i>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <!-- Details -->
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <span class="badge bg-<%= item.type === 'lost' ? 'danger' : 'success' %>">
                                            <i class="fas fa-<%= item.type === 'lost' ? 'search' : 'hand-holding' %> me-1"></i>
                                            <%= item.type %>
                                        </span>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            <%= new Date(item.dateReported).toLocaleDateString() %>
                                        </small>
                                    </div>
                                    
                                    <h5 class="mb-1"><%= item.itemName %></h5>
                                    
                                    <p class="text-muted small mb-1">
                                        <i class="fas fa-map-marker-alt me-1"></i> <%= item.location %>
                                    </p>
                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-user me-1"></i> <%= item.reporterName %>
                                        <span class="mx-1">â€¢</span>
                                        <%= item.reporterEmail %>
                                    </p>
                                    
                                    <p class="small mb-0 text-truncate" style="max-width: 300px;">
                                        <%= item.description.substring(0, 80) %><%= item.description.length > 80 ? '...' : '' %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Actions Footer -->
                        <div class="card-footer bg-light">
                            <div class="d-flex gap-2">
                                <form action="/admin/items/<%= item._id %>/approve" method="POST" class="flex-grow-1">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-check me-1"></i> Approve
                                    </button>
                                </form>
                                <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#rejectModal<%= item._id %>">
                                    <i class="fas fa-times"></i> Reject
                                </button>
                                <a href="/admin/items/<%= item._id %>/edit" class="btn btn-secondary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Reject Modal -->
                    <div class="modal fade" id="rejectModal<%= item._id %>" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="/admin/items/<%= item._id %>/reject" method="POST">
                                    <div class="modal-header">
                                        <h5 class="modal-title"><i class="fas fa-times-circle text-danger me-2"></i>Reject Item</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>You are about to reject: <strong><%= item.itemName %></strong></p>
                                        <div class="mb-3">
                                            <label class="form-label">Reason for rejection (optional)</label>
                                            <textarea class="form-control" name="reason" rows="3" 
                                                      placeholder="Explain why this item is being rejected..."></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fas fa-times me-1"></i> Reject Item
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="card">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-check-circle fa-5x text-success"></i>
                </div>
                <h3 class="mb-2">All caught up! ðŸŽ‰</h3>
                <p class="text-muted mb-4">There are no pending items that need your review.</p>
                <a href="/admin/items" class="btn btn-primary">
                    <i class="fas fa-box me-1"></i> View All Items
                </a>
            </div>
        </div>
    <% } %>
</div>
