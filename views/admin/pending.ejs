<div class="dashboard-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-clock text-warning me-2"></i> Pending Items</h2>
        <span class="badge bg-warning text-dark fs-6"><%= items.length %> pending</span>
    </div>
    
    <% if (items.length > 0) { %>
        <div class="row g-4">
            <% items.forEach(function(item) { %>
                <div class="col-lg-6">
                    <div class="card border-0 shadow-sm">
                        <div class="row g-0">
                            <div class="col-4">
                                <% if (item.imagePath) { %>
                                    <img src="<%= item.imagePath %>" class="img-fluid rounded-start h-100 object-fit-cover" alt="<%= item.itemName %>">
                                <% } else { %>
                                    <div class="h-100 d-flex align-items-center justify-content-center bg-light rounded-start">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                <% } %>
                            </div>
                            <div class="col-8">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <span class="badge bg-<%= item.type === 'lost' ? 'danger' : 'success' %>">
                                            <%= item.type %>
                                        </span>
                                        <small class="text-muted">
                                            <%= new Date(item.dateReported).toLocaleDateString() %>
                                        </small>
                                    </div>
                                    <h5 class="card-title mt-2"><%= item.itemName %></h5>
                                    <p class="card-text small text-muted mb-1">
                                        <i class="fas fa-map-marker-alt me-1"></i> <%= item.location %>
                                    </p>
                                    <p class="card-text small text-muted mb-2">
                                        <i class="fas fa-user me-1"></i> <%= item.reporterName %>
                                    </p>
                                    <p class="card-text small"><%= item.description.substring(0, 100) %>...</p>
                                    
                                    <div class="d-flex gap-2">
                                        <form action="/admin/items/<%= item._id %>/approve" method="POST">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check me-1"></i> Approve
                                            </button>
                                        </form>
                                        <button type="button" class="btn btn-danger btn-sm" 
                                                data-bs-toggle="modal" data-bs-target="#rejectModal<%= item._id %>">
                                            <i class="fas fa-times me-1"></i> Reject
                                        </button>
                                        <a href="/admin/items/<%= item._id %>/edit" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i> View
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Reject Modal -->
                    <div class="modal fade" id="rejectModal<%= item._id %>" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form action="/admin/items/<%= item._id %>/reject" method="POST">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Reject Item</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Rejecting: <strong><%= item.itemName %></strong></p>
                                        <div class="mb-3">
                                            <label class="form-label">Reason for rejection</label>
                                            <textarea class="form-control" name="reason" rows="3" 
                                                      placeholder="Enter reason..."></textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Reject</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h4>All caught up!</h4>
                <p class="text-muted">No pending items to review.</p>
                <a href="/admin/items" class="btn btn-primary">View All Items</a>
            </div>
        </div>
    <% } %>
</div>
