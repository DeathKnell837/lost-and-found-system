<div class="dashboard-content">
    <!-- Welcome Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Welcome back! ðŸ‘‹</h2>
            <p class="text-muted mb-0">Here's what's happening with your Lost & Found system</p>
        </div>
        <div class="d-flex gap-2">
            <a href="/admin/items/pending" class="btn btn-primary">
                <i class="fas fa-clock"></i> Review Pending
            </a>
        </div>
    </div>
    
    <!-- Quick Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-lg-3">
            <div class="stat-card bg-primary text-white">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stat-details">
                        <h3><%= stats.totalItems %></h3>
                        <p>Total Items</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card bg-warning">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="fas fa-hourglass-half"></i>
                    </div>
                    <div class="stat-details">
                        <h3><%= stats.pendingItems %></h3>
                        <p>Pending</p>
                    </div>
                </div>
                <% if (stats.pendingItems > 0) { %>
                <a href="/admin/items/pending" class="stat-card-footer">
                    Review now <i class="fas fa-arrow-right"></i>
                </a>
                <% } %>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card bg-danger text-white">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <div class="stat-details">
                        <h3><%= stats.lostItems %></h3>
                        <p>Lost</p>
                    </div>
                </div>
                <a href="/admin/items?type=lost&status=approved" class="stat-card-footer">
                    View all <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="stat-card bg-success text-white">
                <div class="stat-card-body">
                    <div class="stat-icon">
                        <i class="fas fa-hand-holding"></i>
                    </div>
                    <div class="stat-details">
                        <h3><%= stats.foundItems %></h3>
                        <p>Found</p>
                    </div>
                </div>
                <a href="/admin/items?type=found&status=approved" class="stat-card-footer">
                    View all <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Secondary Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <div class="category-icon me-3">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <div>
                        <h4 class="mb-0"><%= stats.claimedItems %></h4>
                        <small class="text-muted">Items Claimed</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <div class="category-icon me-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <h4 class="mb-0"><%= stats.totalUsers %></h4>
                        <small class="text-muted">Registered Users</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <div class="category-icon me-3">
                        <i class="fas fa-folder"></i>
                    </div>
                    <div>
                        <h4 class="mb-0"><%= stats.totalCategories %></h4>
                        <small class="text-muted">Categories</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row g-4">
        <!-- Pending Items - Action Required -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-circle text-warning"></i> Needs Your Attention
                    </h5>
                    <a href="/admin/items/pending" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body p-0">
                    <% if (pendingItems.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <tbody>
                                    <% pendingItems.forEach(function(item) { %>
                                        <tr>
                                            <td style="width: 50px;">
                                                <% if (item.imagePath) { %>
                                                    <img src="<%= item.imagePath %>" class="item-thumb" alt="">
                                                <% } else { %>
                                                    <div class="item-thumb-placeholder">
                                                        <i class="fas fa-image"></i>
                                                    </div>
                                                <% } %>
                                            </td>
                                            <td>
                                                <strong class="d-block"><%= item.itemName %></strong>
                                                <small class="text-muted"><%= item.location %></small>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= item.type === 'lost' ? 'danger' : 'success' %>">
                                                    <%= item.type %>
                                                </span>
                                            </td>
                                            <td class="text-end">
                                                <form action="/admin/items/<%= item._id %>/approve" method="POST" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                                <a href="/admin/items/<%= item._id %>/edit" class="btn btn-sm btn-secondary" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <p class="text-muted mb-0">All caught up! No pending items.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <!-- Recent Activity -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-clock text-primary"></i> Recent Activity
                    </h5>
                    <a href="/admin/items" class="btn btn-sm btn-secondary">View All</a>
                </div>
                <div class="card-body p-0">
                    <% if (recentItems.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <tbody>
                                    <% recentItems.slice(0, 5).forEach(function(item) { %>
                                        <tr>
                                            <td style="width: 50px;">
                                                <% if (item.imagePath) { %>
                                                    <img src="<%= item.imagePath %>" class="item-thumb" alt="">
                                                <% } else { %>
                                                    <div class="item-thumb-placeholder">
                                                        <i class="fas fa-image"></i>
                                                    </div>
                                                <% } %>
                                            </td>
                                            <td>
                                                <a href="/admin/items/<%= item._id %>/edit" class="text-decoration-none">
                                                    <strong class="d-block text-dark"><%= item.itemName %></strong>
                                                </a>
                                                <small class="text-muted"><%= new Date(item.dateReported).toLocaleDateString() %></small>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= item.type === 'lost' ? 'danger' : 'success' %>">
                                                    <%= item.type %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= 
                                                    item.status === 'approved' ? 'primary' : 
                                                    item.status === 'pending' ? 'warning' : 
                                                    item.status === 'claimed' ? 'info' : 'secondary' 
                                                %>">
                                                    <%= item.status %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p class="text-muted mb-0">No items yet</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
