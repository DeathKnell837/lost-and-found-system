<%- contentFor('body') %>

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1"><i class="fas fa-chart-bar me-2"></i>Statistics & Analytics</h2>
                    <p class="text-muted mb-0">Overview of system performance and trends</p>
                </div>
                <a href="/admin/statistics" class="btn btn-outline-primary">
                    <i class="fas fa-sync me-1"></i>Refresh
                </a>
            </div>
        </div>
    </div>

    <!-- Main Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Total Items</h6>
                            <h2 class="mb-0"><%= stats.totalItems %></h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-box fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Lost Items</h6>
                            <h2 class="mb-0"><%= stats.lostItems %></h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-search fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Found Items</h6>
                            <h2 class="mb-0"><%= stats.foundItems %></h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-hand-holding-heart fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-white-50">Claimed Items</h6>
                            <h2 class="mb-0"><%= stats.claimedItems %></h2>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-handshake fa-3x opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Secondary Stats -->
    <div class="row mb-4">
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h4 class="text-warning"><%= stats.pendingItems %></h4>
                    <small class="text-muted">Pending Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h4 class="text-success"><%= stats.successRate %>%</h4>
                    <small class="text-muted">Success Rate</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h4 class="text-primary"><%= stats.totalUsers %></h4>
                    <small class="text-muted">Registered Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h4 class="text-info"><%= stats.avgDaysToClaim %></h4>
                    <small class="text-muted">Avg Days to Claim</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Monthly Trend Chart -->
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Monthly Trends (Last 6 Months)</h5>
                </div>
                <div class="card-body">
                    <canvas id="monthlyChart" height="300"></canvas>
                </div>
            </div>
        </div>

        <!-- Item Distribution -->
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Item Status Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="statusChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Categories -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-folder me-2"></i>Items by Category</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Category</th>
                                <th class="text-end">Count</th>
                                <th style="width: 40%;">Distribution</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% itemsByCategory.forEach(cat => { %>
                            <tr>
                                <td>
                                    <i class="fas <%= cat.icon || 'fa-folder' %> me-2 text-primary"></i>
                                    <%= cat.name %>
                                </td>
                                <td class="text-end"><%= cat.count %></td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-primary" style="width: <%= stats.totalItems > 0 ? (cat.count / stats.totalItems * 100) : 0 %>%;">
                                            <%= stats.totalItems > 0 ? ((cat.count / stats.totalItems) * 100).toFixed(0) : 0 %>%
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Top Locations -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>Top Locations</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Location</th>
                                <th class="text-end">Items</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% topLocations.forEach((loc, index) => { %>
                            <tr>
                                <td><span class="badge bg-primary"><%= index + 1 %></span></td>
                                <td><%= loc._id || 'Unknown' %></td>
                                <td class="text-end"><strong><%= loc.count %></strong></td>
                            </tr>
                            <% }) %>
                            <% if (topLocations.length === 0) { %>
                            <tr>
                                <td colspan="3" class="text-center text-muted py-3">No location data yet</td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Last 7 Days Activity</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-primary mb-0"><%= stats.recentItems %></h3>
                                <small class="text-muted">New Items Reported</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded">
                                <h3 class="text-success mb-0"><%= stats.recentClaims %></h3>
                                <small class="text-muted">Items Claimed</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Monthly Trend Chart
    const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
    const monthlyData = <%- JSON.stringify(monthlyData) %>;
    
    new Chart(monthlyCtx, {
        type: 'line',
        data: {
            labels: monthlyData.map(d => d.month + ' ' + d.year),
            datasets: [
                {
                    label: 'Lost Items',
                    data: monthlyData.map(d => d.lost),
                    borderColor: '#dc3545',
                    backgroundColor: 'rgba(220, 53, 69, 0.1)',
                    tension: 0.4,
                    fill: true
                },
                {
                    label: 'Found Items',
                    data: monthlyData.map(d => d.found),
                    borderColor: '#198754',
                    backgroundColor: 'rgba(25, 135, 84, 0.1)',
                    tension: 0.4,
                    fill: true
                },
                {
                    label: 'Claimed',
                    data: monthlyData.map(d => d.claimed),
                    borderColor: '#0dcaf0',
                    backgroundColor: 'rgba(13, 202, 240, 0.1)',
                    tension: 0.4,
                    fill: true
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            }
        }
    });

    // Status Distribution Chart
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: ['Pending', 'Approved', 'Claimed', 'Rejected'],
            datasets: [{
                data: [
                    <%= stats.pendingItems %>,
                    <%= stats.approvedItems %>,
                    <%= stats.claimedItems %>,
                    <%= stats.rejectedItems %>
                ],
                backgroundColor: ['#ffc107', '#198754', '#0dcaf0', '#dc3545'],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });
</script>
