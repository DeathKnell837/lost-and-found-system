<div class="card item-card h-100 shadow-sm">
    <div class="position-relative">
        <% if (item.imagePath) { %>
            <img src="<%= item.imagePath %>" class="card-img-top item-image" alt="<%= item.itemName %>">
        <% } else { %>
            <div class="card-img-top item-image-placeholder d-flex align-items-center justify-content-center bg-light">
                <i class="fas fa-image fa-2x text-muted"></i>
            </div>
        <% } %>
        <span class="badge bg-<%= item.type === 'lost' ? 'danger' : 'success' %> position-absolute" style="top: 8px; left: 8px;">
            <%= item.type.charAt(0).toUpperCase() + item.type.slice(1) %>
        </span>
    </div>
    <div class="card-body">
        <h6 class="card-title mb-1"><%= item.itemName %></h6>
        <p class="card-text text-muted mb-1">
            <i class="fas fa-map-marker-alt me-1"></i><%= item.location %>
        </p>
        <p class="item-description mb-0"><%= item.description.substring(0, 80) %><%= item.description.length > 80 ? '...' : '' %></p>
    </div>
    <div class="card-footer bg-white border-top d-flex justify-content-between align-items-center">
        <small class="text-muted">
            <i class="fas fa-calendar me-1"></i>
            <%= new Date(item.dateLostFound).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
        </small>
        <a href="/items/<%= item._id %>" class="btn btn-sm btn-outline-primary">
            View <i class="fas fa-arrow-right ms-1"></i>
        </a>
    </div>
</div>
